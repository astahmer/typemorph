{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": true,
    "target": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "customConditions": ["source"]
  },
  "include": ["src"],
  "types": ["vitest/globals"],
  "exclude": ["node_modules"]
}
